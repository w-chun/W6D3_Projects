<h1>Search!</h1>

<nav class="users-search">
  <input class="search-input" type="text" name="" value="">
  <ul class="users">
    <li>Example</li>
  </ul>
</nav>

<form action="/users/search" method="GET">
  <input
    type="text"
    name="query"
    value="<%= @query %>">

  <input type="submit" value="Search Users!">
</form>

<ul>
  <% @users.each do |user| %>
    <li>
      <%= link_to user.username, user_url(user) %>
      <%= render 'follows/form', user: user %>
    </li>
  <% end %>
</ul>
